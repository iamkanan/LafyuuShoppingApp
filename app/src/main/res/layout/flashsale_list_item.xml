<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:layout_marginEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="match_parent">
            
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/saleImage"
                android:layout_width="110dp"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="110dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/flashSaleProductName"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="@id/saleImage"
                app:layout_constraintTop_toBottomOf="@id/saleImage"
                app:layout_constraintEnd_toEndOf="@id/saleImage"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_bold"
                android:includeFontPadding="false"
                android:textColor="@color/neutralDark"
                android:text="FS - Nike Air "
                android:layout_height="wrap_content"/>
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/flashSaleProductDiscountPrice"
                app:layout_constraintTop_toBottomOf="@id/flashSaleProductName"
                android:layout_width="wrap_content"
                android:text="$299,43"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_bold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="@+id/flashSaleProductName"
                android:textColor="@color/lightBlue"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/flashSaleProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/strike_through_text"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:text="$299,43"
                android:textColor="@color/neutralGrey"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/flashSaleProductName"
                app:layout_constraintTop_toBottomOf="@id/flashSaleProductDiscountPrice" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/flashSaleProductDiscountPercent"
                app:layout_constraintTop_toBottomOf="@id/flashSaleProductDiscountPrice"
                android:layout_width="wrap_content"
                android:text="24% Off"
                android:textSize="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@id/flashSaleProductPrice"
                android:textColor="@color/primaryRed"
                android:layout_height="wrap_content"/>




        </androidx.constraintlayout.widget.ConstraintLayout>















    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>