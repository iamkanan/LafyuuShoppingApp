<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="24dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/reviewUserImage"
        android:layout_width="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:layout_height="48dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reviewUserName"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/reviewUserImage"
        android:layout_marginStart="8dp"
        android:text="James Lawson"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/neutralDark"
        android:layout_height="wrap_content"/>

    <RatingBar
        android:id="@+id/reviewTotalRatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/secondaryYellow"
        android:numStars="5"
        android:rating="4"
        android:theme="@style/RatingBar"
        app:layout_constraintStart_toStartOf="@id/reviewUserName"
        app:layout_constraintEnd_toEndOf="@id/reviewUserName"
        app:layout_constraintTop_toBottomOf="@id/reviewUserName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/productSpesification"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewUserImage"
        android:text="The Nike Air Max 270 React ENG combines a full-length React foam midsole with a 270 Max Air unit for unrivaled comfort and a striking visual experience."
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins"
        android:textColor="@color/neutralGrey"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reviewDate"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productSpesification"
        android:layout_marginTop="20dp"
        android:text="December 10, 2016"
        android:textColor="@color/neutralGrey"
        android:textSize="10sp"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>